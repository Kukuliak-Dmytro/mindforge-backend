{
  "name": "mindforge-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src/**/*.ts --exec npx tsx api.ts",
    "start": "npx tsx api.ts",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose stop postgres",
    "db:logs": "docker-compose logs -f postgres",
    "db:status": "docker ps --filter name=mindforge-postgres --format \"table {{.Names}}\\t{{.Status}}\\t{{.Ports}}\"",
    "db:wait": "node scripts/wait-for-db.js",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:backend": "docker-compose logs -f backend",
    "docker:rebuild": "docker-compose down --rmi local && docker-compose up -d --build",
    "docker:rebuild:backend": "docker-compose stop backend && docker-compose rm -f backend && docker-compose build backend && docker-compose up -d backend",
    "docker:ps": "docker-compose ps",
    "predev": "npm run db:up && npm run db:wait",
    "prestart": "npm run db:up && npm run db:wait"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.14",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@types/cors": "^2.8.18",
    "@types/jsonwebtoken": "^9.0.9",
    "better-auth": "^1.3.34",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "zod": "^3.24.4"
  }
}
